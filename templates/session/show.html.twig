{% extends 'base.html.twig' %}

{% block title %}Detail Session{% endblock %}

{% block body %}


<h1>{{ session.intitule }}</h1><br>
{{ session.formateur }} <br>
{{ session.dateDebut | date("d-m-Y") }} <br>
{{ session.dateFin | date("d-m-Y") }} <br>
{{ session.place }} <br>
{{ placeL }} <br>
{{ nbModules }} <br>

<br>
<h2>Programme</h2>
<br>

<table>
    <thead>
        <td>Module</td>
        <td>Catégorie</td>
        <td>Durée</td>
        <td>Action</td>
    </thead>
    <tbody>
        {% for programme in programmes %}
            <tr>
                <td>{{ programme.module.nom }}</td>
                <td>{{ programme.module.categorie.nom }}</td>
                <td>{{ programme.duree }} Jours</td>
                <td><a href="">Désinscrire</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<br>
<h2>Stagiaire</h2>
<br>

<table>
    <thead>
        <td>Stagiaire</td>
        <td>Action</td>
    </thead>
    <tbody>
        {% for stagiaire in stagiaires %}
        <tr>
            <td>{{ stagiaire.prenom }} - {{ stagiaire.nom }}</td>
            <td><a href="">Désinscrire</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}