<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href={{ asset("/style.css") }}>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Black+Han+Sans&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Black+Han+Sans&family=Share+Tech+Mono&display=swap" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
        <link rel="stylesheet" href={{ asset("/nav-bar.css") }}>
        <div class="sidebar">
            <div class="logo">
                <a href="{{ path('app_home') }}">CDF</a>
            </div>
            <div class="lien">
                <div class="btn"><a href="{{ path('app_formation') }}">Formation</a></div>
                <div class="btn"><a href="{{ path('app_session') }}">Session</a></div>
                <div class="btn"><a href="{{ path('app_stagiaire') }}">Stagiaire</a></div>
                <div class="btn"><a href="{{ path('app_formateur') }}">Formateur</a></div>
                <div class="btn"><a href="{{ path('app_module') }}">Module</a></div>
                <div class="lock">
                    <div class="portrait-ctn">
                        <a href="{{ path('app_profil') }}">
                            <div class="portrait">
                                <img src="{{ asset('Formateur/' ~ app.user.formateur.portrait) }}" alt="">
                            </div>
                        </a>
                        <span class="portrait-txt pos1">{{ app.user.formateur.nom }}</span>
                        <span class="portrait-txt pos2">{{ app.user.formateur.prenom }}</span>
                        <div class="btn-alt"><a href="{{ path('app_logout') }}"><img class="icon" src="{{ asset("/logout.png") }}" ></a>
                        <span class="icon-txt">Deconnexion</span>
                        </div>
                    </div>
                    <div class="btn-admin"><a href="{{ path('app_administration') }}">Administration</a></div>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="main">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
