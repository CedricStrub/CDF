{% extends 'base.html.twig' %}

{% block title %}Liste Stagiaire{% endblock %}

{% block body %}

<link rel="stylesheet" href={{ asset("/formation.css") }}>
<div class="forma">
    <div class="title-ctn">
        <div class="title">Stagiaires</div>
    </div>
    <div class="search-ctn">
        <div class="titre">Recherche</div>
    </div>
    <div class="ctn-tab">
        <div class="cadre-tab">
            <div class="titre">Stagiaire inscrit</div>
            <div class="tab">
                <table>
                    <thead>
                        <td>Nom</td>
                        <td>Prenom</td>
                        <td>E-mail</td>
                        <td>Date de Naissance</td>
                        <td>Sexe</td>
                        <td>Telephone</td>
                        <td>Ville</td>
                    </thead>
                    <tbody>
                    {% for stagiaire in stagiaires %}
                        <tr>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.nom }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.prenom }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.email }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.dateNaissance | date("d-m-Y") }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.sexe }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.telephone }}</a></td>
                            <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.ville }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
